{
    "name": "hexlet/code",
    "autoload": {
        "psr-4": {
            "Hexlet\\": "src/"
        },
        "autoload-dev": {
            "psr-4": { "Hexlet\\Tests\\": "tests/" }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "vimeo/psalm": "^5.14",
        "overtrue/phplint": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "lint": "phplint",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm --config=psalm.xml",
        "test": "phpunit --colors=always"
    }
}
